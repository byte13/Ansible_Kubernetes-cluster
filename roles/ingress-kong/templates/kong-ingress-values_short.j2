gateway:
  admin:
    http:
      enabled: true
  #env:
  #  KONG_REAL_IP_HEADER: "X-Forwarded-For"
  #  KONG_REAL_IP_RECURSIVE: "on"
  #  KONG_TRUSTED_IPS: "10.13.3.0/24"
  #  KONG_TRUSTED_IPS: "0.0.0.0/0,::/0"
  proxy:
    type: NodePort
    http:
      enabled: true
      nodePort: 32080
    #https:
    #  enabled: true
    #  nodePort: 32443
    tls:
      enabled: true
      nodePort: 32443
  service:
    # To determine how ip-restriction plugin behaves.
    # Local means : filter on external IP's instead of Cluster ones
    spec:
      externalTrafficPolicy: Local

# Use a DaemonSet controller instead of a Deployment controller
deployment:
  kong:
    enabled: true
  daemonset: true
